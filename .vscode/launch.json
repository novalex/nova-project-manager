	"version": "0.2.0",
	"configurations": [
		{
			"name": "XDebug",
			"type": "php",
			"request": "launch",
			"port": 9000
		},
		{
			"name": "Launch currently open script",
			"type": "php",
			"request": "launch",
			"program": "${file}",
			"cwd": "${fileDirname}",
			"port": 9000
		},
        {
			"name": "XDebug on Homestead",
			"type": "php",
			"request": "launch",
			"pathMappings": {
				"/home/vagrant/sites": "E:/Sites"
			},
			"port": 9000
		}
	]
}